<h1>New Post Form</h1>

<%= form_for @post do |f| %>

  <%= f.label :users %>
  <%= f.collection_select :users, @users, :id, :username %> <br><br>

  <%= f.label :title %>
  <%= f.text_field :title %> <br><br>

  <%= f.label :content %>
  <%= f.text_field :content %> <br><br>

  <%= f.label :category %>
  <%= f.collection_check_boxes :category_ids, @categories, :id, :name %>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
      <%= categories_fields.text_field :name %><br><br>
      <%end%>



  <%= f.submit %>
  <%end%>
